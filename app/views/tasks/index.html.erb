<h1>My Tasks:</h1>

<ul>
  <% @tasks.each do |task| %>
<li><input type="checkbox" id="completed" name="completetask" <%="checked" unless task.completed != true %>><%= link_to task.title, "/tasks/#{task.id}" %>
<%= link_to '<i class="fa-regular fa-trash-can"></i>'.html_safe,
  task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></li>
  <% end %>
</ul>

<%= link_to "Add a new Task!", "/new"%>

